<body class="m--skin- m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--fixed m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">

    <!-- begin:: Page -->
    <div class="m-grid m-grid--hor m-grid--root m-page">
        <div class="m-login m-login--signin  m-login--5" id="m_login">
            <div class="m-login__wrapper-1 m-portlet-full-height" style="background-image: url(/Assets/Studentassets/assets/app/media/img/bg/bg-3.jpg);">
                <div class="m-login__wrapper-1-1">
                    <div class="m-login__contanier">
                        <div class="m-login__content">
                            <div class="m-login__logo">
                                <a href="#">
                                    <img src="~/Img/logo1.png" height="160px">
                                </a>
                            </div>
                            <div class="m-login__title">
                                <h3> University Admission Portal </h3>
                            </div>
                            <div class="m-login__desc">
                                Online Admission Portal for the Students of Department of Computer Science
                            </div>
                            <div class="m-login__form-action">
                                <button type="button" id="m_login_signup" class="btn m-btn--pill m-btn--air btn-info"> Get An Account </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- 2nd div -->
            <div class="m-login__wrapper-2 m-portlet-full-height" style="background-image: url(/Img/GCU_Tower_P1140896.jpg);">
                <div class="m-login__contanier" style="background-color: #6f727d3b; padding: 3rem; border-radius: 1rem;">
                    <div class="m-login__signin">
                        <div class="m-login__head">
                            <h3 class="m-login__title">Login To Your Account</h3>
                        </div>
                        <form class="m-login__form m-form" action="">
                            <div class="form-group m-form__group" style="padding: 1rem; border-radius: 1rem;">
                                <input class="form-control m-input" type="text" style="padding: 1rem;" placeholder="Username" name="username" autocomplete="off">
                            </div>
                            <div class="form-group m-form__group" style="padding: 1rem; border-radius: 1rem;">
                                <input class="form-control m-input m-login__form-input--last" style="padding: 1rem;" type="Password" Id="mypassword" placeholder="Password" name="password">

                            </div>

                            <div class="m-login__form-sub  col-12">
                                <label class="m-checkbox m-checkbox--m-checkbox--info">
                                    <input type="checkbox" name="agree" onclick="myFunction()"> <a href="#" class="m--font-info"> Show Password </a>.
                                    <span></span>
                                </label>
                                <span class="m-form__help"></span>
                            </div>
                            @*<div>
                                    <input type="checkbox" style="padding: 1rem;" onclick="myFunction()"><a href="#" class="m--font-info"> Show Password </a>
                             </div>*@
                            <div class="row m-login__form-sub  col-12">
                                <div class="col m--align-left">
                                    <label class="m-checkbox m-checkbox--info">
                                        <input type="checkbox" name="remember"> <a href="#" class="m--font-info"> Remember me </a>
                                        <span></span>
                                    </label>
                                </div>
                                <div class="col m--align-right">
                                    <a href="javascript:;" id="m_login_forget_password" class="m--font-info">Forget Password ?</a>
                                </div>
                            </div>
                            <div class="m-login__form-action">
                                <button id="m_login_signin_submit" class="btn m-btn--pill m-btn--air btn-info">Sign In</button>
                            </div>
                        </form>
                    </div>
                    <div class="m-login__signup">
                        <div class="m-login__head">
                            <h3 class="m-login__title">Sign Up</h3>
                            <div class="m-login__desc">Enter your details to create your account:</div>
                        </div>
                        <form class="m-login__form m-form row" action="">
                            <div class="form-group m-form__group col-6" style="padding: .5rem;">
                                <input class="form-control m-input" type="text" style="padding: .5rem;" placeholder="Username" name="Username" tag="ApplicationUser">
                            </div>

                            <div class="form-group m-form__group col-6" style="padding: .5rem;">
                                <input class="form-control m-input" type="text" style="padding: .5rem;" placeholder="FirstName" name="FirstName" tag="Person ApplicationUser">
                            </div>
                            <div class="form-group m-form__group col-6" style="padding: .5rem;">
                                <input class="form-control m-input" type="text" style="padding: .5rem;" placeholder="MiddleName" name="MiddleName" tag="Person ApplicationUser">
                            </div>
                            <div class="form-group m-form__group col-6" style="padding: .5rem;">
                                <input class="form-control m-input" type="text" style="padding: .5rem;" placeholder="LastName" name="LastName" tag="Person ApplicationUser">
                            </div>
                            <div class="form-group m-form__group col-6" style="padding: .5rem;">
                                <input class="form-control m-input" type="text" style="padding: .5rem;" placeholder="Email" name="Email" tag="ApplicationUser">
                            </div>
                            <div class="form-group m-form__group col-6" style="padding: .5rem;">
                                <input class="form-control m-input" type="text" style="padding: .5rem;" placeholder="CNIC" name="CnicNo" tag="Person">
                            </div>
                            <div class="form-group m-form__group col-6" style="padding: .5rem;">
                                <input class="form-control m-input" type="password" style="padding: .5rem;" placeholder="Password" name="Password" id="txtPassword" tag="ApplicationUser" title="Password must contain: Minimum 8 characters atleast 1 Alphabet and 1 Number">
                            </div>
                            <div class="form-group m-form__group col-6" style="padding: .5rem;">
                                <input class="form-control m-input" style="padding: .5rem;" type="password" placeholder="Confirm Password" name="Cpassword" id="txtConfirmPassword" tag="ApplicationUser">
                            </div>
                            <div class="form-group m-form__group col-6" style="padding: .5rem;">
                                <select class="form-control m-input" type="password" style="padding: .5rem;" id="genderType" placeholder="GenderType" name="GenderTypeId" tag="Person">
                                    @*<option>Select Gender</option>
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>Other</option>*@
                                </select>
                            </div>
                            <div class="form-group m-form__group col-6" style="padding: .5rem;">
                                <input class="form-control" style="padding: .5rem;" type="date" placeholder="DateOfBirth" name="DateOfBirth" tag="Person">
                            </div>
                            <div class="form-group m-form__group col-12 mt-3">
                                <div class="">
                                    <input class="dropify"
                                           data-allowed-file-extensions="jpg png jpeg"
                                           data-allowed-formats="square"
                                           data-show-remove="true"
                                           id="profilePic"
                                           name="ProfilePic"
                                           tag="Person"
                                           required
                                           type="file" />
                                </div>
                            </div>
                            <div class="m-login__form-sub  col-12">
                                <label class="m-checkbox m-checkbox--info">
                                    <input type="checkbox" name="agree"> <a href="#" class="m--font-info">I Agree the terms and conditions</a>.
                                    <span></span>
                                </label>
                                <span class="m-form__help"></span>
                            </div>
                            <div class="m-login__form-action">
                                <input type="submit" name="btnSignup" value="Sign up" id="m_login_signup_submit" class="btn m-btn--pill m-btn--air btn-info" />
                                <!--<button id="m_login_signup_submit"--> @*onclick="Validate()"*@ <!--class="btn m-btn--pill m-btn--air btn-outline-info">Sign Up</button>-->
                                <button id="m_login_signup_cancel" class="btn m-btn--pill m-btn--air btn-info">Cancel</button>
                            </div>
                        </form>
                    </div>
                    <div class="m-login__forget-password">
                        <div class="m-login__head">
                            <h3 class="m--font-info">Forgotten Password ?</h3>
                            <div class="">Enter your email to reset your password:</div>
                        </div>
                        <form class="m-login__form m-form" action="/Layout/ForgetPassword" method="post">
                            <div class="form-group m-form__group">
                                <input class="form-control m-input" type="text" style="padding: .5rem;" placeholder="Email" name="email" id="m_email" autocomplete="off">
                            </div>
                            <div class="m-login__form-action">
                                <input type="submit" value="Request" class="btn m-btn--pill m-btn--air btn-info" />
                                <!--<button--> @*id="m_login_forget_password_submit"*@ <!--class="btn m-btn--pill m-btn--air btn-info">Request</button>-->
                                <button id="m_login_forget_password_cancel" class="btn m-btn--pill m-btn--air btn-info">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end:: Page -->
