<script>
        
    function gcuresult(event){
        var part1  =  parseInt(document.getElementById("part1").value);
        var part1total = parseInt(document.getElementById("part1total").value);
        var matric = parseInt(document.getElementById("matric").value);
        var matrictotal = parseInt(document.getElementById("matrictotal").value);
       
        if( isNaN(part1) || isNaN(part1total) || isNaN(matric) || isNaN(matrictotal)  ){ }
        else{
            event.preventDefault(); 
            var sum= ((.4*(matric/matrictotal)) + (.6*(part1/part1total)) ) * 100;       
            $('#finalresult').html( '<hr class="style-three"> <h3> Your Aggregate = <span id=showresult>'+sum.toFixed(2)+' % </span> </h3> <hr class="style-three"> ');       
        }
    }
</script>